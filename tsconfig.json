{
	"compilerOptions": {
	  "baseUrl": ".",
	  "paths": {
		"@/*": ["src/*"]
	  },
	  "inlineSourceMap": true,
	  "inlineSources": true,
	  "module": "ESNext",
	  "target": "ES6",
	  "allowJs": true,
	  "noImplicitAny": true,
	  "moduleResolution": "node",
	  "importHelpers": true,
	  "isolatedModules": true,
	  "strictNullChecks": true,
	  "allowSyntheticDefaultImports": true,
	  "experimentalDecorators": true,
	  "emitDecoratorMetadata": true,
	  "lib": [
		"DOM",
		"ES5",
		"ES6",
		"ES7"
	  ]
	},
	"include": [
	  "src/**/*.ts"
	]
}
  