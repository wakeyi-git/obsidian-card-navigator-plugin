{
  "compilerOptions": {
    "baseUrl": "./src",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "ESNext",
    "target": "ES6",
	"strict": true,
	"forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "isolatedModules": true,
    "strictNullChecks": true,
	"resolveJsonModule": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
	"outDir": "./dist",
    "rootDir": "./",
    "lib": [
      "DOM",
      "ES5",
      "ES6",
      "ES7"
    ]
  },
  "include": ["src/**/*.ts", "main.ts", "src/i18n.ts"]
}
